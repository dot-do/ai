{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["DO_TOKEN", "PAYLOAD_SECRET", "DATABASE_URI", "DATABASE_SYNC_URI", "DATABASE_TOKEN", "TURSO_AUTH_TOKEN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "generate:types": {
      "dependsOn": ["^generate:types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
