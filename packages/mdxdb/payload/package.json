{
  "name": "@mdxdb/payload",
  "version": "0.2.0",
  "description": "Payload CMS integration for MDX content management with schema validation and linked data support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./fields": {
      "types": "./dist/fields/index.d.ts",
      "import": "./dist/fields/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mdx",
    "mdxdb",
    "payload",
    "cms",
    "content-management",
    "frontmatter",
    "linked-data",
    "schema-validation",
    "zod"
  ],
  "author": ".do Platform",
  "license": "MIT",
  "dependencies": {
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "mdxld": "workspace:*",
    "mdxdb": "workspace:*",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "payload": "*"
  },
  "peerDependenciesMeta": {
    "payload": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "payload": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dot-do/platform.git",
    "directory": "ai/packages/mdxdb/payload"
  },
  "homepage": "https://mdxdb.do",
  "publishConfig": {
    "access": "public"
  }
}
