{
  "name": "mdxdb",
  "version": "0.1.0",
  "description": "MDX-powered database with schema validation, linked data, and CMS integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdxdb": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./payload": {
      "types": "./payload/dist/index.d.ts",
      "import": "./payload/dist/index.js"
    }
  },
  "files": [
    "dist",
    "payload/dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:payload": "cd payload && tsc",
    "build:all": "pnpm build && pnpm build:payload",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mdx",
    "database",
    "cms",
    "content-management",
    "payload",
    "linked-data",
    "schema-validation",
    "frontmatter",
    "zod",
    "mdxdb"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/platform.git",
    "directory": "ai/packages/mdxdb"
  },
  "author": ".do Platform",
  "license": "MIT",
  "dependencies": {
    "mdxld": "workspace:*",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "oauth.do": "workspace:*",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "payload": "*"
  },
  "peerDependenciesMeta": {
    "payload": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "payload": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://mdxdb.do",
  "engines": {
    "node": ">=18.0.0"
  }
}
