{
  "name": "@dotdo/integration-compiler",
  "version": "0.1.0",
  "description": "Compile MDXLD Integration definitions into TypeScript code",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "integration-compiler": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "compile": "node dist/cli/cli.js",
    "convert:composio": "node dist/tools/composio-converter.js",
    "deploy:integrations": "node dist/tools/deploy-integrations.js"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.1.0",
    "gray-matter": "^4.0.3",
    "zod": "^3.23.8",
    "yaml": "^2.6.1",
    "handlebars": "^4.7.8",
    "prettier": "^3.4.2"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vitest": "^2.1.8",
    "@types/node": "^22.10.5"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  }
}
