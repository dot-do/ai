{
  "compilerOptions": {
    // ES2022 target provides modern JavaScript features (top-level await, class fields, etc.)
    // while maintaining broad Node.js compatibility (14.8+) and optimal tree-shaking
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "src/**/*.test.ts",
    "src/types/events.ts" // Excluded: requires workspace zod/nanoid dependencies, planned for future release
  ]
}
